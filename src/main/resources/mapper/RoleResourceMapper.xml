<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mypandora.springboot.modular.system.mapper.RoleResourceMapper">

    <insert id="giveRoleResource">
        INSERT INTO sys_role_resource( role_id, resource_id )
        VALUES
        <foreach collection="resourceListId" item="resourceId" index="index" separator=",">
            (
            #{roleId},
            #{resourceId}
            )
        </foreach>
    </insert>

    <delete id="deleteRoleResource">
        DELETE t
        FROM sys_role_resource t
        WHERE t.role_id = #{roleId}
    </delete>

    <delete id="deleteBatchRoleResource">
        DELETE t
        FROM sys_role_resource t
        WHERE t.role_id in
        <foreach collection="roleListId" item="roleId" index="index" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>

</mapper>