<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mypandora.springboot.modular.system.mapper.UserRoleMapper">

    <insert id="giveUserRole">
        INSERT INTO sys_user_role( user_id, role_id )
        VALUES
        <foreach collection="roleListId" item="roleId" index="index" separator=",">
            (
            #{userId}
            ,#{roleId}
            )
        </foreach>
    </insert>

    <delete id="deleteUserRole">
        DELETE t
        FROM sys_user_role t
        WHERE t.user_id = #{userId}
    </delete>

    <delete id="deleteBatchUserRole">
        DELETE t
        FROM sys_user_role t
        WHERE t.user_id in
        <foreach collection="userListId" item="userId" index="index" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

</mapper>